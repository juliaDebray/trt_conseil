<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>{% block title %} JobEncounter {% endblock %}</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="{{ asset('style/main.css') }}">

    {% block javascripts %}
        {#{{ encore_entry_script_tags('app') }}#}
    {% endblock %}
</head>
<body>
    {% block header %}
    <header class="py-2 bg-secondary text-light">
        {% include('navbar/_navbar.html.twig') %}
    </header>
    {% endblock %}

    <main class="container flex-grow-1 p-4 p-sm-5 mw-100">
        <div class="px-lg-5">
            {% block body %}
            {% endblock %}
        </div>
    </main>

    {% block footer %}
    <footer class="py-5 bg-dark text-light text-light d-flex flex-column align-items-center sticky-bottom">
        <p>@TRT_conseil</p>
        <p>@Julia Debray</p>
    </footer>
    {% endblock %}

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>

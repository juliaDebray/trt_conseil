<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    {% endblock %}

    {% block javascripts %}
        {#{{ encore_entry_script_tags('app') }}#}
    {% endblock %}
</head>
<body>
{% block header %}
<header class="container py-2 bg-secondary text-light d-flex flex-row justify-content-center">
    <div class="row d-flex">
        <div class="col-1">
        <div>LOGO</div>
        </div>
        <div class="col-5">
        <h1>Mon application</h1>
        </div>
        {% if app.user%}
            {% if app.user.status == 'validated'  %}
                <div class="col-4">
                    <div class="m-1">
                        {{ app.user.username }}
                    </div>
                    <div class="m-1">
                        <a class="btn btn-info btn-block" href="{{ path('app_logout') }}">DÃ©connexion</a>
                    </div>
                    <div class="m-1">
                        {% if is_granted('ROLE_RECRUITER') %}
                            <a class="btn btn-info btn-block" href="{{ path('recruiter_edit', { id: app.user.id}) }}">Profil</a>
                        {% endif %}
                        {% if is_granted('ROLE_CANDIDATE') %}
                            <a class="btn btn-info btn-block" href="{{ path('candidate_edit', { id: app.user.id}) }}">Profil</a>
                        {% endif %}
                    </div>
                </div>
                <div class="col-4">
                    {% if is_granted('ROLE_RECRUITER') %}
                        <a class="btn btn-primary btn-block" href="{{ path('homeRecruiter') }}">Accueil</a>
                    {% endif %}
                    {% if is_granted('ROLE_CANDIDATE') %}
                        <a class="btn btn-info btn-block" href="{{ path('home', { id: app.user.id}) }}">Accueil</a>
                    {% endif %}
                </div>
            {% endif %}
        {% endif %}
    </div>
</header>
{% endblock %}

{% block body %}
{% endblock %}

<footer class="py-5 bg-dark text-light  text-light d-flex flex-row justify-content-center fixed-bottom">
    <div class="column">
        <p>@TRT_conseil</p>
        <p>@Julia Debray</p>
    </div>
</footer>
</body>
</html>

{% extends 'base.html.twig' %}

{% block title %}Mes offres{% endblock %}

{% block body %}
    <div class="container border">
        <div class="row bg-primary px-3 justify-content-center text-white-50">
            <h2>Vos offres d'emplois</h2>
        </div>
        {% if offers %}
            {% for offer in offers %}
                <div class="row m-2 d-flex justify-content-between">
                    {{ offer.name }} {{ offer.description }} {{ offer.companyAddress }}
                    {% if offer.status == 'validated' %}
                        <a class="btn btn-primary" href="{{ path('candidatures_show', {'offerId':offer.id }) }}" >Liste des candidats</a>
                    {% else %}
                        <p>En attente de validation</p>
                    {% endif %}
                </div>
            {% endfor %}
        {%  else %}
            <div class="row">
                aucune offre en cours
            </div>
        {% endif %}
    </div>
{% endblock %}

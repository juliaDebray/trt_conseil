{% extends 'base.html.twig' %}

{% block title %}Offers_list{% endblock %}

{% block body %}
    <div class="container border">
        <div class="row bg-info px-3 justify-content-center text-white-50">
            <h2>Liste des offres d'emplois</h2>
        </div>
        {% if offers %}
            {% for offer in offers %}
                <div class="row m-2 d-flex justify-content-between">
                    {{ offer.name }} {{ offer.description }} {{ offer.companyAddress }}
                    <a class="btn btn-info" href="{{ path('candidature_new', { 'offerId': offer.id }) }}">Postuler</a>
                </div>
            {% endfor %}
        {%  else %}
            <div class="row">
            aucune offre en cours
            </div>
        {% endif %}
    </div>
{% endblock %}
